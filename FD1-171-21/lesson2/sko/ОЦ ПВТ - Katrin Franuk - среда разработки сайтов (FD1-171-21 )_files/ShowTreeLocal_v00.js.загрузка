function Tree_Options()
{
  this.DropDownMode=false; // в выпадающем списке
  this.DropDownSelectAutoClose=true; // авто-захлопывать при выборе элемента
  this.DropDownComboDefText='кликни для выбора';
  
  this.ExpandAllMode=1; // 0 - не показывать; 1 - показывать кнопки
  this.EnableAutoExpand=true; // разрешать авто-раскладывать вершину при её клике

  this.ExpandAll_Caption='развернуть всё';
  this.CollapseAll_Caption='свернуть всё';

  this.CheckBoxMode=1; // 1 - без чекбоксов, выбор одной строки;
                       // 2 - чекбоксы с 2 состояниями; 3 - чекбоксы с 3 сост.

  this.TableMode=false;

  // запрещать ли всю дочернюю подветку для родителя в состоянии 0,1,2
  this.DisableChildForParent=[false,false,false];

  this.Img_Path=ImagesPath+"Tree/";
  this.Img_LastBr_FN='TrLastBr.gif';
  this.Img_NotLastBr_FN='TrNotLastBr.gif';
  this.Img_NoneBr_FN='TrNoneBr.gif';
  this.Img_SkipBr_FN='TrSkipBr.gif';
  this.Img_OrphanBr_FN='TrOrphanBr.gif';
  this.Img_MinusBr_FN='TrMinusBr.gif';
  this.Img_PlusBr_FN='TrPlusBr.gif';
  this.Img_Width=16;
  this.Img_Height=18;

  this.Img_CBEnA=['TrCBE0.gif','TrCBE1.gif','TrCBE2.gif'];
  this.Img_CBDisA=['TrCBD0.gif','TrCBD1.gif','TrCBD2.gif'];
  this.Img_CBWidth=13;
  this.Img_CBHeight=13;

  this.Combo_ImgLeft='TrComboL.gif';
  this.Combo_ImgMiddle='TrComboM.gif';
  this.Combo_ImgRightNormal='TrComboRN.gif';
  this.Combo_ImgRightPressed='TrComboRP.gif';
  this.Combo_ImgLeftWidth=1;
  this.Combo_ImgRightWidth=18;
  this.Combo_Width=300;

  this.EnableSelectedHighlight=true; // подсвечивать выбранную строку спец. стилем
}
